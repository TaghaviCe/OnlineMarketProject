<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <data>
         <variable
             name="ProductListViewModel"
             type="com.example.onlinemarketproject.viewmodels.ProductListViewModel" />
     </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProductListFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recent_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:listDataRecent="@{homeViewModel.listReacent}"
        tools:listitem="@layout/prodect_row_items" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>