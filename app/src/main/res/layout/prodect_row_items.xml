<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<!--    <data>-->
<!--        <variable-->
<!--            name="Image"-->
<!--            type="com.example.onlinemarketproject.model.ProductItem" />-->
<!--    </data>-->
<data>

    <variable
        name="productName"
        type="String" />

    <variable
        name="productImageSrc"
        type="String" />

    <variable
        name="price"
        type="String" />

</data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_picture"
            android:layout_width="100dp"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_margin="5dp"
            app:imageUrl="@{productImageSrc.toString()}"
            tools:src="@drawable/ic_baseline_insert_photo_24" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@{productName}"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_variant"
            android:layout_marginTop="50dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_weight="1"
            android:text="@{price}"
            android:textAlignment="textEnd"
            android:textSize="15dp"
            android:textColor="#049A18"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:layout_margin="2dp"
        android:background="#F40D0D" />
</LinearLayout>
</layout>